#:kivy 1.10.1
<SettingsButton@Button>:
    size_hint: (None, None)
    width: 30
    height: 30
<ImageSettingsButtons@Image>:
    size: self.parent.size
    pos: self.parent.pos

<Record>:
    id: record
    #spacing: 5
    orientation: 'horizontal'
    CheckBox:
        id: ch_box
        size: (5, 5)
        on_active: self.parent.if_active()
    Image:
        id: lp_image
        allow_stretch: True
        keep_ratio: True
        size_hint_x: None
        size_hint_y: None
        width: 130
    Label:
        id: predicted_text
    Label:
        id: time
    Label:
        id: coordinates


<MainScreen>:
    # Main Layout
    BoxLayout:
        # Change background color of the main layout
        canvas:
            Color:
                rgba: 0.5, 0.5, 0.5, 1
            Rectangle:
                size: self.size
                pos: self.pos
        padding: [10, 10, 10, 10]
        spacing: 20

        # Left side of the app
        GridLayout:
            cols: 1
            rows: 3
            KivyCapture:  # KivY Capture widget goes here
                id: video
                size_hint_y: .75
            StackLayout:    # Settings button container
                size_hint_y: .05
                spacing: 5
                padding: [350, 0, 250, 0]
                # Settings buttons
                SettingsButton:
                    ImageSettingsButtons:
                        source: 'icons/set.png'
                SettingsButton:
                    ImageSettingsButtons:
                        source: 'icons/db.png'
                SettingsButton:
                    ImageSettingsButtons:
                        source: 'icons/vid.png'
                SettingsButton:
                    ImageSettingsButtons:
                        source: 'icons/cam.png'
            BoxLayout:
                size_hint_y: .2
                spacing: 20
                padding: [20, 20, 20, 20]
                Button:
                    id: start_button
                    text: 'Start'
                    on_press: app.on_press_start()
                Button:
                    id: stop_button
                    text: 'Stop'
                    on_press: app.on_press_stop()
                Button:
                    id: pause_button
                    text: 'Pause'
                    on_press: app.on_press_pause()
                    disabled: True

        # Right side of the app
        GridLayout:
            cols: 1
            rows: 3
            size_hint_x: 1.5
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: .05
                padding: [0, 0, 0, 50]
                Widget:
                Label:
                    size_hint_y: 0.5
                    text: 'License Plate Image'
                Label:
                    size_hint_y: 0.2
                    text:'Predicted Text'
                Label:
                    size_hint_y: 0.1
                    text: 'Time'
                Label:
                    size_hint_y: 0.2
                    text: 'Coordinates'

            ScrollView:
                id: scroll
                size_hint_y: .75
                size: self.size
                do_scroll_y: True
                bar_width: 4

                GridLayout:
                    id: data_grid
                    cols: 1
                    spacing: 5
                    row_default_height: '150dp'
                    size_hint_y: None
                    height: self.minimum_height

            Button:
                size_hint_y: .2
                text: 'Legend'


<BootScreen>:
    title: 'Boot Screen'
    id: boot_screen
    name: 'BootScreen'
    on_enter: root.do_everything()
    canvas.before:
        Rectangle:
            source: 'icons/bg.jpg'
            size: self.size
            pos: self.pos
    FloatLayout:
        Label:
            id: booting_label
            size_hint: None, None
            text: root.boot_text
            texture: self.texture
            font_size: 150
            center: self.parent.center
            size: self.texture_size
            pos: self.pos
            opacity: .7
            #canvas:
             #   Color:
             #       rgba: 0, 1, 0, 0.5
              #  Rectangle:
               #     size: self.size
                #    pos: self.pos
        ScrollView:
            size_hint: None, None
            height: self.parent.height / 10
            width: self.parent.width / 3
            background_color: 0, 0, 0, 0
            bar_width: 0
            scroll_y: 0
            Label:
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                markup: True
                text: root.init_text
                padding_x: 5
                opacity: .5

        #TextInput:
            #id: init_text
            #text: root.init_text
            #size_hint: None, None
